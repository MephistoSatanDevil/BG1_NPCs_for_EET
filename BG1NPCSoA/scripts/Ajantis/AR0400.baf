IF 
InParty("AJANTIS") !StateCheck("AJANTIS",CD_STATE_NOTVALID)
Global("AjantisQuest","GLOBAL",4)
Global("7XKatrinaExists","AR0400",0)
CombatCounter(0) 
Global("AjantisAR0400TalkTimer","GLOBAL",0)
